<h1><%= @cocktail.name %></h1>
<% @cocktail.doses.each do |dose| %>
<p><%= dose.description %> of <%= dose.ingredient.name %>
 <%= link_to "delete", dose_path(dose),
method: :delete,
data: { confirm: "Delete this ingredient?" } %></p>

<% end %>

<%= simple_form_for [@cocktail, @dose] do |f| %>
<%= f.association :ingredient %>
<%= f.input :description %>
<%= f.submit %>


<% end %>

 <%= link_to "Delete cocktail", cocktail_path(@cocktail),
method: :delete,
data: { confirm: "Delete this cocktail?" } %>
<%= link_to "Back to cocktails", cocktails_path %>

